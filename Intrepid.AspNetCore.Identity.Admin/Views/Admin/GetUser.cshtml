@model UserViewModel
@{
    ViewData["Title"] = "GetUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">User Details</h1>
    <a asp-controller="Admin" asp-action="AddUser" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-edit fa-sm text-white-50"></i> Edit User</a>
</div>


<div class="row">
    <div class="col-lg-12">

        <!-- Default Card Example -->
        <div class="card mb-4">
            <div class="card-header">
                Add User
            </div>

            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="AddUser">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="email" asp-for="User.Username" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                        <span asp-validation-for="User.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="email" asp-for="User.Email" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="User.Phone" class="form-control form-control-user" placeholder="Enter Phone Number...">
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Roles</h1>
    <a asp-controller="Admin" asp-action="AddUser" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Add Role</a>
</div>


<div class="row">
    <div class="col-lg-12">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Role ID</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Role ID</th>
                                <th>Name</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (RoleForReadModel r in Model.User.Roles)
                            {
                                <tr>
                                    <td>@(r.RoleId)</td>
                                    <td>@(r.Name)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Claims</h1>
    <a asp-controller="Admin" asp-action="AddUser" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Add Claim</a>
</div>


<div class="row">
    <div class="col-lg-12">


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (ClaimForReadModel r in Model.User.Claims)
                            {
                                <tr>
                                    <td>@(r.Name)</td>
                                    <td>@(r.Value)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}

@section Styles{
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}




